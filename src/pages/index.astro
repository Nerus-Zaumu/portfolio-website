	{skill: 'Javascript', fluency: 65, width: 'w-d'},
	{skill: 'Typescript', fluency: 75, width: 'w-e'},
	{skill: 'Angular', fluency: 75, width: 'w-f'},
	{skill: 'Astro', fluency: 60, width: 'w-c'},
	{skill: 'NestJs', fluency: 70, width: 'w-e'},
	{skill: 'UI Design(Figma)', fluency: 55, width: 'w-b'},

]

const resumeData: Props[] = [
	{
		timePeriod: '2012-2018',
		subject: 'Secondary School',
		place: 'Bamenda',
		detail: "I was a secondary student at the Presbyterian Secondary Nkwen In Bamenda. I got my Ordinary Level Certificate whilst being a student there"
	},
	{
		timePeriod: '2018-2020',
		subject: 'High School',
		place: 'Douala',
		detail: "Attended Government Bilingual High School Bonaberi. I later got my Advanced Level Certificate towards the end of 2020 from this school"
	},
	{
		timePeriod: '2020-Present',
		subject: 'Software Engineering',
		place: 'Buea',
		detail: "Been an Engineering student at the university of Buea since November 2020. Will be completing the program by the June of 2024"
	},
	{
		timePeriod: 'June 2022-November 2022',
		subject: 'Internship',
		place: 'Buea',
		detail: "I interned at Ciniter, a local Fintech startup here in Buea. I worked as a Web developer with other interns and senior developers. "
	}
]
